<form method="POST" action='/api/addsnapshot'>
    <div class='row'>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="patientId">Patient ID</label>
            <input readonly type="text" class="form-control" name="patientId" value="{{this.patientId}}">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="snapshotDate">Date</label>
            <input type="date" class="form-control" name="snapshotDate">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="physicianName">Performing Physician</label>
            <input type="text" class="form-control" name="physicianName">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="pulse">Pulse</label>
            <input type="number" class="form-control" name="pulse">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="temperature">Temperature</label>
            <input type="number" class="form-control" name="temperature">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="weightValue">Weight (Pounds)</label>
            <input type="number" class="form-control" name="weightValue">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="heightValue">Height (Inches)</label>
            <input type="number" class="form-control" name="heightValue">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="isDiabetic">Diabetic Status</label>
            <input type="text" class="form-control" name="isDiabetic">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="systolicBloodPressure">Systolic Blood Pressure</label>
            <input type="number" class="form-control" name="systolicBloodPressure">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="diastolicBloodPressure">Diastolic Blood Pressure</label>
            <input type="number" class="form-control" name="diastolicBloodPressure">
        </div>
        <div class="form-group col-sm-6 col-xs-12">
            <label for="comments">Comments</label>
            <textarea type="text" class="form-control" name="comments"></textarea>
        </div>
    </div>
    <div class='row'>
        <div class="form-group col-sm-6 col-xs-12">
            <button type="submit" class="btn btn-primary" style="width: 100%">Submit</button>
        </div>
    </div>
</form>